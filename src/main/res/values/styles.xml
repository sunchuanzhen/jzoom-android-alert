<resources>

    <!-- 自定义对话框 -->
    <style name="jzoom_alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->

    </style>

    <style name="jzoom_alert_wait" parent="jzoom_alert_dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="jzoom_alert_button">
        <item name="android:background">@drawable/alert_dialog_btn_bottom</item>
        <item name="android:padding">15dip</item>
    </style>

    <style name="jzoom_button_danger" parent="jzoom_alert_button">
        <item name="android:textColor">#ff0000</item>
    </style>


</resources>